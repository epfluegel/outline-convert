                            <outline text="`/etc/apache2/sites-enabled/default-ssl.conf`"/>
                        </outline>
                    </outline>
                    <outline text="SSL Configuration #slide ">
                        <outline text="The Apache SSL configuration file contains the following lines:">
                            <outline text="`#`"/>
                            <outline text="`#    Certificate config info`"/>
                            <outline text="`#`"/>
