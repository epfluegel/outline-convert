                <outline text="Definition I - Generating the Random splits of Asset">
                    <outline text="Create a python module with the following node"/>
                    <outline text="Random Asset.py">
                        <outline text="`import random`"/>
                        <outline text="`def random_by_number(number, min_random, max_random, spaces=1, precision=2):`">
                            <outline text="`if spaces &lt;= 0:`">
<outline text="`return number`"/>
                            </outline>
                            <outline text="`random_numbers = [random.uniform(min_random, max_random) for i in range(0, spaces)]`"/>
                            <outline text="`increment_number = (number - sum(random_numbers)) / spaces`"/>
                            <outline text="`return [round(n + increment_number, precision) for n in random_numbers]`"/>
                        </outline>
                        <outline text="`number = int(input (&quot;Enter the secret amount:&quot;))`"/>
                        <outline text="`spaces = int(input (&quot;Enter the number of shares:&quot;))``"/>
                        <outline text="`max_random = number / spaces`"/>
                        <outline text="`min_random = max_random * 0.6`"/>
                        <outline text="`random_numbers = random_by_number(number, min_random, max_random, spaces=spaces, precision=2)`"/>
                        <outline text="`print(random_numbers)`"/>
                        <outline text="`print(len(random_numbers))`"/>
                        <outline text="`print(sum(random_numbers))`"/>
                    </outline>
