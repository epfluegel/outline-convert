        <outline text="Description">
            <outline text="Client uncertain about the type of SP (safe or compromised)"/>
            <outline text="Signalling game"/>
        </outline>
        <outline text="Players:">
            <outline text="Sender: Service Provider (SP)"/>
            <outline text="Receiver: Client"/>
        </outline>
    </outline>
