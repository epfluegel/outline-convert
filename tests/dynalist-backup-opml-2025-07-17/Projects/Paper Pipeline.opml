                    <outline text="number = {8},"/>
                    <outline text="journal = {Chaos},"/>
                    <outline text="author = {{Chengyi Zeng} and Zeng, Chengyi and {Baoan Ren} and Ren, Baoan and {Menglin Li} and Li, Menglin and {Hongfu Liu} and Liu, Hongfu and Liu, Hongfu and {Jing Chen} and Chen, Jing and Chen, Jing},"/>
