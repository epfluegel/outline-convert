    <outline text="INVESTIGATION">
        <outline text="D: matrix([-c[l],0],[-c[f]-c[l],b[p]-c[f]]);"/>
        <outline text="G: matrix([b[r],0],[b[r]+b[f]-c[r],b[f]]);"/>
