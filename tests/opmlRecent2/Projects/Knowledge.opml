            <outline text="Pre-broadcast #slide">
                <outline text="Peggy computes the following:">
                    <outline text="$$s = \text{Hash}(\text{seed})$$"/>
                    <outline text="$$x_0 = s \text{ where } x_i+1 = \text{Hash}(x_i)$$"/>
